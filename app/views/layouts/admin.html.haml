!!!
%html
  %head
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", "data-turbolinks-track" => true
    = stylesheet_link_tag "admin/admin"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{href: "/admin"}
            %strong Admin Panel
          %ul.nav
            %li.divider-vertical
            %li{class: current_page?(admin_root_path) ? "active" : ""}
              = link_to "Home", admin_root_path
            %li{ class: current_page?(admin_sermons_path) ? "active" : "" }
              = link_to "Sermons", admin_sermons_path
          %ul.nav.pull-right
            %li
              = link_to "Logout", destroy_user_session_path, :method => :delete
    .container
      = yield

  :javascript
    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });
